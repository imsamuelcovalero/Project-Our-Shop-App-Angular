{
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "Login",
        "description": "Endpoint for user login.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Login successful. Returns token and user information.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. The identifier must be a valid email or at least 3 characters. Or the password must exist and be at least 8 characters long.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Identifier must be a valid email or have at least 3 characters. Or Password must exist and be at least 8 characters long."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Incorrect password.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Incorrect password"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found. User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login/me": {
      "get": {
        "tags": [
          "User Verification"
        ],
        "summary": "Verify user authentication",
        "description": "This endpoint verifies the authentication of the user based on the provided JWT",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User is authenticated and the user data is returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserVerificationResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Token not provided or malformed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    },
                    "errors": {
                      "type": "object",
                      "properties": {
                        "notProvided": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "Token not provided"
                          ]
                        },
                        "malformed": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "Token is malformed"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found - User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "User not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "required": [
          "identifier",
          "password"
        ],
        "properties": {
          "identifier": {
            "type": "string",
            "description": "Email or username. Must be valid email or have at least 3 characters.",
            "example": "johndoe@example.com or john.doe"
          },
          "password": {
            "type": "string",
            "description": "User password. Must have at least 8 characters.",
            "example": "Yourpassword123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "description": "Auth token.",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
          },
          "id": {
            "type": "string",
            "description": "User ID.",
            "example": "60cc034e1d295a3218c5f4be"
          },
          "email": {
            "type": "string",
            "description": "User email.",
            "example": "johndoe@example.com"
          },
          "username": {
            "type": "string",
            "description": "User username.",
            "example": "john.doe"
          },
          "role": {
            "type": "string",
            "description": "User role.",
            "example": "admin"
          }
        }
      },
      "UserVerificationResponse": {
        "type": "object",
        "properties": {
          "cashbackValue": {
            "type": "number",
            "description": "User's accumulated cashback value",
            "example": 5.5
          }
        }
      }
    }
  }
}