{
  "paths": {
    "/orders": {
      "get": {
        "tags": [
          "Orders"
        ],
        "summary": "Get user orders",
        "description": "This endpoint retrieves all orders related to a user. Note: this endpoint requires user authentication via a JWT token.",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Operation successful. Returns all user orders.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Token is malformed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Token is malformed"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Token is not provided",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Token is not provided"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found. No orders found for the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "No orders found for the user"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "totalPrice": {
            "type": "number",
            "description": "Total price of the order.",
            "example": 200.50
          },
          "pickUpPlaceId": {
            "type": "string",
            "description": "ID of the pickup place.",
            "format": "uuid",
            "example": "60db1b2d8b161942080dad3e"
          },
          "saleDate": {
            "type": "string",
            "description": "Date and time of the sale.",
            "format": "date-time",
            "example": "2023-06-18T14:35:42Z"
          },
          "userId": {
            "type": "string",
            "description": "ID of the user who made the order.",
            "format": "uuid",
            "example": "60db1b2d8b161942080dad3e"
          },
          "_id": {
            "type": "string",
            "description": "ID of the order.",
            "format": "uuid",
            "example": "60db1b2d8b161942080dad3e"
          }
        }
      }
    }
  }
}